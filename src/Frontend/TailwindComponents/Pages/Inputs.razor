@using TailwindComponents.VectorDisplay

@{
    var vectorDataArray = new UIVectorData[8];
    for (var i = 0; i < 8; i++)
    {
        vectorDataArray[i] = new()
        {
            Color = Color.Red
        };
        vectorDataArray[i].Element.Write(1);
    }

    var uiVector = new UIVector<int>(256, vectorDataArray);
}

