<div class="max-w-md mx-auto bg-white shadow">
    <ul role="list" class="p-6 divide-y divide-slate-200">
        @foreach (var person in _people)
        {
            @DrawPerson(person)
        }
        @foreach (var person in People)
        {
            @person
        }
        @foreach (var person in _people)
        {
            <li class="flex py-4 first:pt-0 last:pb-0">
                <img class="h-10 w-10 rounded-full" src="@person.ImageUrl" alt=""/>
                <div class="ml-3 overflow-hidden">
                    <p class="text-sm font-medium text-slate-900">@person.Name</p>
                    <p class="text-sm text-slate-500 truncate">@person.Email</p>
                </div>
            </li>
        }
    </ul>
</div>

@code {
    public record Person(string Name, string Email, string ImageUrl);

    private static RenderFragment<Person> DrawPerson = person =>
    // Remove top/bottom padding when first/last child
        @<li class="flex py-4 first:pt-0 last:pb-0">
            <img class="h-10 w-10 rounded-full" src="@person.ImageUrl" alt=""/>
            <div class="ml-3 overflow-hidden">
                <p class="text-sm font-medium text-slate-900">@person.Name</p>
                <p class="text-sm text-slate-500 truncate">@person.Email</p>
            </div>
        </li>;

    private RenderFragment[] People = _people.Select(p => DrawPerson(p)).ToArray();

    static Person[] _people =
    {
        new("Kristen Ramos", "kristen.ramos@example.com", @"https://images.unsplash.com/photo-1550525811-e5869dd03032?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80"),
