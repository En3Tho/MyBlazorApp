@using Microsoft.AspNetCore.Components.QuickGrid
@using TailwindComponents.Data

<QuickGrid Items="@Data">
    <PropertyColumn Property="@(p => p.Name)"/>
    <PropertyColumn Property="@(p => p.Email)"/>
    <PropertyColumn Property="@(p => p.ImageUrl)"/>
</QuickGrid>

@code {

    [Parameter, EditorRequired]
    public IQueryable<Person> Data { get; init; } = default!;
}