<ExampleBlock>
    <div class="flex flex-col gap-2 bg-slate-700 py-8 px-16 justify-center">
        <span class="text-slate-300 font-semibold">Join our newsletter</span>
        <div class="flex gap-4">
            <div class="flex">
                <input type="text"
                       class="px-4 bg-slate-800 text-slate-400 rounded-md shadow-[inset_0_2px_0_hsla(0,_0%,_0%,_.25),_inset_0_-2px_0_hsla(0,_0%,_100%,_.25)]
                              focus:outline-none focus:shadow-[inset_0_2px_0_hsla(0,_0%,_0%,_.35),_inset_0_-2px_0_hsla(0,_0%,_100%,_.35)]
                              hover:bg-slate-900
                              placeholder:italic placeholder:text-slate-500 placeholder:after:content-['*'] placeholder:after:ml-0.5 placeholder:after:text-red-500"
                       placeholder="Enter your email"/>
            </div>
            <button class="bg-violet-700 py-2 px-4 rounded-md text-slate-100 font-medium hover:bg-violet-800">
                Sign up
            </button>
        </div>
        <div class="flex gap-4 items-center">
            <div class="relative inline-block w-5 h-5">
                <label class="cursor-pointer">
                    <input type="checkbox" class="peer absolute w-0 h-0" @bind-value="_checked"/>
                    <span class="w-5 h-5 text-white shadow-[inset_0_2px_0_hsla(0,_0%,_0%,_.25),_inset_0_-2px_0_hsla(0,_0%,_100%,_.25)] rounded absolute bg-slate-800 hover:bg-slate-900
                                 peer-checked:shadow-[inset_0_2px_0_hsla(0,_0%,_0%,_.35),_inset_0_-2px_0_hsla(0,_0%,_100%,_.35)] peer-">
                        <svg class="stroke-[3] @If(_checked, "block", "hidden")" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5"/>
                        </svg>
                    </span>
                </label>
            </div>
            <span class="text-slate-400">Send me occasional promotional emails</span>
        </div>
    </div>
</ExampleBlock>

