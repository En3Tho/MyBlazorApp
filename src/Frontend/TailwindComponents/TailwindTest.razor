<ExampleBlock>
    <div class="flex flex-col gap-2 bg-slate-700 py-8 px-16 justify-center">
        <span class="text-slate-400">Join our newsletter</span>
        <div class="flex gap-4">
            <div class="flex">
                <input type="text" class="px-4 bg-slate-800 text-slate-400 rounded-md placeholder:italic placeholder:text-slate-500 shadow-[inset_0_0_3px_hsla(0,_0%,_100%,_0.5)]"
                       placeholder="Enter your email"/>
            </div>
            <button class="bg-slate-800 py-2 px-4 rounded-md text-slate-100 font-medium shadow-[inset_0_1px_2px_hsla(0,_0%,_100%,_.5),_0_1px_3px_hsl(0,_0%,_0%,_.5)]">
                Sign up
            </button>
            <button class="bg-slate-800 py-2 px-4 rounded-md text-slate-100 font-medium shadow-[inset_0_2px_0_hsla(0,_0%,_0%,_.25),_inset_0_-2px_2px_hsla(0,_0%,_100%,_.25)]">
                Sign up
            </button>
        </div>
        <div class="flex gap-4 items-center">
            <div class="relative inline-block w-5 h-5">
                <label class="cursor-pointer">
                    <input type="checkbox" class="peer accent-slate-800 absolute w-0 h-0 shadow-[inset_0_0_3px_hsla(0,_0%,_100%,_0.5)] checked:w-5 checked:h-5"/>
                    <span class="w-5 h-5 shadow-[inset_0_0_3px_hsla(0,_0%,_100%,_0.5)] rounded-sm absolute bg-slate-800 peer-checked:w-0 peer-checked:h-0"></span>
                </label>
            </div>
            <span class="text-slate-400">Send me occasional promotional emails</span>
        </div>
    </div>

</ExampleBlock>

