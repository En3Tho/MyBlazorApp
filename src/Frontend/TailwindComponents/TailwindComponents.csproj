<Project Sdk="Microsoft.NET.Sdk.Razor">

    <ItemGroup>
        <SupportedPlatform Include="browser" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Components.QuickGrid" />
        <PackageReference Include="Microsoft.AspNetCore.Components.Web" />
    </ItemGroup>

    <ItemGroup>
        <Folder Include="wwwroot\css" />
    </ItemGroup>

    <Target Name="BuildCSS" AfterTargets="PostBuildEvent">
        <Exec Command="npx postcss $(ArtifactsPath)/obj/$(ProjectName)/$(ConfigurationName)/scopedcss/projectbundle/$(ProjectName).bundle.scp.css -r" />
    </Target>

</Project>