<Project Sdk="Microsoft.NET.Sdk.Razor">

	<PropertyGroup>
		<TargetFrameworks>net6.0-windows10.0.19041</TargetFrameworks>
		<OutputType>WinExe</OutputType>
		<TargetPlatformMinVersion>10.0.17763.0</TargetPlatformMinVersion>
		<SingleProject>true</SingleProject>
		<RootNamespace>MyBlazorApp.BlazorClient.Maui</RootNamespace>

		<!-- Required - Enable Single Project for WinUI -->
		<EnablePreviewMsixTooling>true</EnablePreviewMsixTooling>
		<WindowsPackageType>MSIX</WindowsPackageType>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|net6.0-windows10.0.19041|AnyCPU'">
	  <PlatformTarget>x64</PlatformTarget>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|net6.0-windows10.0.19041|AnyCPU'">
	  <PlatformTarget>x64</PlatformTarget>
	</PropertyGroup>

	<ItemGroup>
		<!-- App Icon -->
		<MauiImage Include="..\MyBlazorApp.BlazorClient.Maui\Resources\appicon.svg" Link="Resources\appicon.svg" ForegroundFile="..\MyBlazorApp.BlazorClient.Maui\Resources\appiconfg.svg" IsAppIcon="true" Color="#512BD4" />

		<!-- Splash Screen -->
		<MauiSplashScreen Include="..\MyBlazorApp.BlazorClient.Maui\Resources\appiconfg.svg" Link="Resources\appiconfg.svg" Color="#512BD4" />

		<!-- Images -->
		<MauiImage Include="..\MyBlazorApp.BlazorClient.Maui\Resources\Images\*" Link="Resources\Images\%(Filename)%(Extension)" />

		<!-- Custom Fonts -->
		<MauiFont Include="..\MyBlazorApp.BlazorClient.Maui\Resources\Fonts\*" Link="Resources\Fonts\%(Filename)%(Extension)" />
	</ItemGroup>

	<ItemGroup>
		<Compile
      Include="..\MyBlazorApp.BlazorClient.Maui\**\*.cs"
      Exclude="..\MyBlazorApp.BlazorClient.Maui\bin\**;..\MyBlazorApp.BlazorClient.Maui\obj\**;..\MyBlazorApp.BlazorClient.Maui\Android\**;..\MyBlazorApp.BlazorClient.Maui\iOS\**;..\MyBlazorApp.BlazorClient.Maui\MacCatalyst\**"
      Link="%(RecursiveDir)%(Filename)%(Extension)" />
		<MauiXaml
      Include="..\MyBlazorApp.BlazorClient.Maui\**\*.xaml"
      Exclude="..\MyBlazorApp.BlazorClient.Maui\bin\**;..\MyBlazorApp.BlazorClient.Maui\obj\**"
      Link="%(RecursiveDir)%(FileName)%(Extension)" />
		<_ThisProjectStaticWebAsset
      Include="..\MyBlazorApp.BlazorClient.Maui\wwwroot\**"
      Link="wwwroot\%(RecursiveDir)%(Filename)%(Extension)"
      RelativePath="%(RecursiveDir)%(Filename)%(Extension)" />
    <None Include="@(_ThisProjectStaticWebAsset)"/>
		<RazorComponent
      Include="..\MyBlazorApp.BlazorClient.Maui\**\*.razor"
      Exclude="..\MyBlazorApp.BlazorClient.Maui\bin\**;..\MyBlazorApp.BlazorClient.Maui\obj\**" 
      Link="%(RecursiveDir)%(Filename)%(Extension)" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.Components.WebView.Maui" Version="6.0.100-preview.5.798" />
		<PackageReference Include="Microsoft.Extensions.FileProviders.Embedded" Version="6.0.0-preview.5.*" />
		<PackageReference Include="Microsoft.Maui" Version="6.0.100-preview.5.798" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.ProjectReunion" Version="0.8.0-preview" />
		<PackageReference Include="Microsoft.ProjectReunion.Foundation" Version="0.8.0-preview" />
		<PackageReference Include="Microsoft.ProjectReunion.WinUI" Version="0.8.0-preview" />
		<ProjectReference Include="..\..\MyBlazorApp.Api.HttpClients\MyBlazorApp.Api.HttpClients.fsproj" />
		<ProjectReference Include="..\..\MyBlazorApp.BlazorClient.Backend\MyBlazorApp.BlazorClient.Backend.fsproj" />
		<ProjectReference Include="..\..\MyBlazorApp.ComponentsAndPages\MyBlazorApp.ComponentsAndPages.csproj" />
		<ProjectReference Include="..\..\MyBlazorApp.Utility\MyBlazorApp.Utility.fsproj" />
		<FrameworkReference Update="Microsoft.Windows.SDK.NET.Ref" RuntimeFrameworkVersion="10.0.19041.16" />
		<FrameworkReference Update="Microsoft.Windows.SDK.NET.Ref" TargetingPackVersion="10.0.19041.16" />
	</ItemGroup>

</Project>
